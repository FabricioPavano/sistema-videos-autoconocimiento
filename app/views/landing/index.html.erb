					<div class="signup-header wow fadeInUp">
						<h3 class="form-title text-center">COMENZ&Aacute;</h3>
						<%= form_for(Usuario.new, as: :usuario, url: registration_path(:usuario)) do |f| %>
						<input type="hidden" name="id" value="bfdba52708">
							<div class="form-group">
								<input class="form-control input-lg" name="usuario[name]" id="name" type="text" placeholder="Tu Nombre" required>
							</div>
							<div class="form-group">
								<input class="form-control input-lg" name="usuario[email]" id="email" type="email" placeholder="Email" required>
							</div>
							<div class="form-group">
								<input class="form-control input-lg" name="usuario[password]" id="password" type="password" placeholder="Contraseña" required>
							</div>
							<div class="form-group last">
								<input type="submit" class="btn btn-warning btn-block btn-lg" value="INSCRIBIRME">
							</div>
							<div class="form-group last">
								<%= button_to "INGRESAR (YA ESTOY INSCRIPTO)", ingresar_path,
								      :class => "btn btn-warning btn-block btn-lg ingresar-redirect", :method => :get %>
							</div>
